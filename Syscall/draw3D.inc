; Servicos de desenho 3D

;-----------------------------------------------------------------------------------------


;======================== T A B E L A ====================================================
; S3D = Servico de desenho 3d

S3D_Table:
	dd S3D_reserved		; 0- Get information



;-----------------------------------------------------------------------------------------


;======================== V A R I A V E I S ==============================================


;-----------------------------------------------------------------------------------------


;======================== E N T R A D A ==================================================
; Entrada  do servico de memoria
; IN:
;	registradores= parametros
;	ebp= numero da funcao
; OUT:
;	depende

S3D_Enter:
	cmp ebp, 0x28
	ja .error
	shl ebp, 2
	call dword [cs:S3D_Table+ebp]
	iretd

.error:	stc
	iretd

;-----------------------------------------------------------------------------------------


;======================== F U N C T I O N  0 =============================================
; Devolve informacoes sobre o servico
; IN:
; OUT:

S3D_reserved:
	ret

;-----------------------------------------------------------------------------------------
